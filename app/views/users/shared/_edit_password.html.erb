<%= form_for(resource, as: resource_name, url: profile_password_path, html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= f.label :password, 'Nouveau mot de passe', class: 'label dark:text-slate-400' %>
    </div>
    <div class="md:w-2/3 ">
      <%= f.password_field :password, autocomplete: "new-password", class: 'input', class: 'input' %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= f.label :password_confirmation, 'Confirmer le mot de passe', class: 'label dark:text-slate-400' %>
    </div>
    <div class="md:w-2/3 ">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= f.label :current_password, 'Nous avons besoin de votre mot de passe actuel pour confirmer vos changements', class: 'label dark:text-slate-400' %>
    </div>
    <div class="md:w-2/3 ">
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
    </div>
  </div>

  <div class="flex flex-wrap justify-end mt-10">
    <%= f.submit "Enregister", class: 'button is-primary' %>
  </div>
<% end %>
