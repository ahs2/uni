<%= form_for(resource, as: resource_name, url: profile_path, html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= f.label :email, 'Email', class: 'label dark:text-slate-400' %>
    </div>
    <div class="md:w-2/3 ">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
      <%= form_field_error_helper(resource, 'email') %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= f.label :phone, 'Numéro de téléphone', class: 'label dark:text-slate-400' %>
    </div>
    <div class="md:w-2/3">
      <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: 'input' %>
      <%= form_field_error_helper(resource, 'phone') %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= f.label :current_password, 'Nous avons besoin de votre mot de passe actuel pour confirmer vos changements', class: 'label dark:text-slate-400' %>
    </div>
    <div class="md:w-2/3 ">
      <%= f.text_field :current_password, autofocus: true, autocomplete: "current-password", class: 'input' %>
      <%= form_field_error_helper(resource, 'current_password') %>
    </div>
  </div>

  <div class="flex flex-wrap justify-end mt-10">
    <%= f.submit "Enregister", class: 'button is-primary' %>
  </div>
<% end %>
