<header class="z-10 py-4 border-b border-slate-200">
  <div class="container flex items-center justify-between h-full px-6 mx-auto">
    <button class="p-1 mr-5 -ml-1 rounded-md xl:hidden focus:outline-none focus:shadow-outline-purple" aria-label="Menu" data-action="click->navbar#toggle">
      <div data-navbar-target="openSide"><span class="material-symbols-outlined text-lg">menu</span></div>
    </button>
    
    <div class="flex justify-center flex-1 lg:mr-32">
    </div>

    <ul class="flex items-center flex-shrink-0 space-x-6 invisible md:visible">
      <span data-action="click->theme-color#toggle" class="visible cursor-pointer rounded-md">
        <div id="lightIcon" data-theme-color-target="light">
          <span class="material-symbols-outlined text-2xl">dark_mode</span>
        </div>
        <div id="darkIcon" class="hidden" data-theme-color-target="dark">
          <span class="material-symbols-outlined text-2xl">light_mode</span>
        </div>
      </span>
      
      <li class="relative visible">
        <button class="mx-1 relative align-middle rounded-md focus:outline-none focus:shadow-outline-purple" data-action="click->notification#toggle">
          <span class="material-symbols-outlined text-2xl">notifications</span>
          <span aria-hidden="true" class="absolute top-0 right-0 inline-block w-3 h-3 transform translate-x-1 -translate-y-1 bg-red-600 border-2 border-white rounded-full dark:border-slate-800"></span>
        </button>
        <div class="hidden" data-notification-target="content">
          <ul class="absolute right-0 w-56 p-2 mt-2 space-y-2 text-slate-600 bg-white border border-slate-100 rounded-md shadow-md dark:text-slate-300 dark:border-slate-700 dark:bg-slate-700">
            <li class="flex py-2">
              <a class="inline-flex items-center justify-center w-full px-2 py-1 text-sm transition-colors duration-150 rounded-md">
                <span>Aucune nouvelle notification</span>
              </a>
            </li>
          </ul>
        </div>
      </li>

      <li class="relative group relative dropdown px-4">
        <div class="group relative dropdown cursor-pointer text-base tracking-wide bg-white py-1 rounded-lg px-3"  aria-label="Account" aria-haspopup="true">
          <div class="flex items-center">
            <%= image_tag current_user.decorate.profile_url, class: 'inline max-w-[2rem] h-[2rem] flex-none rounded-full mr-2', alt: 'main_logo' %>
            <div class="mr-2">
              <p class="font-bold"><%= current_user.phone %></p>
              <p class="text-sm text-slate-500"><%= I18n.t("enum.user.profiles.#{ current_user.profile }") %></p>
            </div>
            <span class="material-symbols-outlined text-2xl text-slate-500"">more_vert</span>
          </div>
        </div>
        <div class="group-hover:block dropdown-menu absolute hidden h-auto z-10">
          <ul class="top-0 w-48 bg-white shadow px-4 py-3 right-0 w-56 mt-2 space-y-2 text-slate-600 bg-white border border-slate-100 rounded-md shadow-md dark:border-slate-700 dark:text-slate-300 dark:bg-slate-700" aria-label="submenu">
            <li class="flex">
              <a class="inline-flex items-center w-full px-2 py-1 text-sm font-semibold transition-colors duration-150 rounded-md hover:bg-slate-100 hover:text-slate-800 dark:hover:bg-slate-800 dark:hover:text-slate-200" href="<%= profile_path %>">
                <span class="material-symbols-outlined text-lg">person</span>
                <span>Profil</span>
              </a>
            </li>
            <li class="flex">
              <% if impersonating? %>
                <%= link_to unimpersonate_users_path, class: 'inline-flex items-center w-full px-2 py-1 text-sm font-semibold transition-colors duration-150 rounded-md hover:bg-slate-100 hover:text-slate-800 dark:hover:bg-slate-800 dark:hover:text-slate-200', method: :delete do %>
                  <span class="material-symbols-outlined text-lg">login</span>
                  Revenir au panel admin
                <% end %>
              <% else %>
                <%= button_to destroy_user_session_path, method: :delete, class: 'inline-flex items-center w-full px-2 py-1 text-sm font-semibold transition-colors duration-150 rounded-md hover:bg-slate-100 hover:text-slate-800 dark:hover:bg-slate-800 dark:hover:text-slate-200',
                  data: {confirm: 'Etes-vous sur?'}, :"data-turbolinks" => false do
                %>
                  <span class="material-symbols-outlined text-lg">login</span>
                  <span class="ml-2">DÃ©connexion</span>
                <% end %>
              <% end %>
            </li>
          </ul>
        </div>
      </li>
    </ul>
  </div>
</header>